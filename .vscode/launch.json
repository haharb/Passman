{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\client\\src\\components\\LoginForm.tsx",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
            
        }, 
        {
            "name": "Attach to Next.js Server",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}/client",
            "remoteRoot": "/app",
            "restart": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/client/.next/**/*.js"]
          }
    ]
}